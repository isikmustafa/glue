<Scene>
    <Integrator type="Pathtracer">
		<Filter type="Gaussian">
			<Sigma>0.5</Sigma>
		</Filter>
		<SampleCount>2048</SampleCount>
		<RRThreshold>0.2</RRThreshold>
    </Integrator>
	
	<Output type="Ldr">
		<Path>../sample_output/cornell-lucywithoutRadianceSampling</Path>
		<Format>png</Format>
		<Tonemapper type="Clamp">
			<Min>0.0</Min>
			<Max>1.0</Max>
		</Tonemapper>
	</Output>
	
	<Output type="Ldr">
		<Path>../sample_output/cornell-lucy-0.18-1.0withoutRadianceSampling</Path>
		<Format>png</Format>
