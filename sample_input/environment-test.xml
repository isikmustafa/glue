			<Key>0.18</Key>
			<MaxLuminance>1.0</MaxLuminance>
		</Tonemapper>
	</Output>
	
	<Output type="Ldr">
		<Path>../sample_output/cornell-lucy-0.18-1.0-0.36keywithoutRadianceSampling</Path>
