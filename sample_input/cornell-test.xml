<Scene>
    <BackgroundRadiance>0 0 0</BackgroundRadiance>
	<SecondaryRayEpsilon>0.0001</SecondaryRayEpsilon>
	
    <Integrator type="Pathtracer">
		<Filter type="Gaussian">
			<Sigma>0.5</Sigma>
		</Filter>
		<SampleCount>16</SampleCount>
		<RRThreshold>0.2</RRThreshold>
    </Integrator>
	
    <Output>
        <Image>
			<ImageName>../sample_output/cornell-test.png</ImageName>
			<Tonemapper type="Clamp">
				<Min>0.0</Min>
				<Max>1.0</Max>
			</Tonemapper>
		</Image>
		<Image>
			<ImageName>../sample_output/cornell-test_1.0.png</ImageName>
			<Tonemapper type="GlobalReinhard">
				<Key>0.18</Key>
				<MaxLuminance>1.0</MaxLuminance>
			</Tonemapper>
		</Image>
        <Image>
			<ImageName>../sample_output/cornell-test_0.9.png</ImageName>
			<Tonemapper type="GlobalReinhard">
				<Key>0.18</Key>
				<MaxLuminance>0.9</MaxLuminance>
			</Tonemapper>
		</Image>
        <Image>
			<ImageName>../sample_output/cornell-test_0.8.png</ImageName>
			<Tonemapper type="GlobalReinhard">
				<Key>0.18</Key>
				<MaxLuminance>0.8</MaxLuminance>
			</Tonemapper>
		</Image>
        <Image>
			<ImageName>../sample_output/cornell-test_0.7.png</ImageName>
			<Tonemapper type="GlobalReinhard">
				<Key>0.18</Key>
				<MaxLuminance>0.7</MaxLuminance>
			</Tonemapper>
		</Image>
    </Output>
	
    <Camera>
        <Position>0 1.3 1.4</Position>
        <Direction>0 -1.05 -1.9</Direction>
        <Up>0 1 0</Up>
        <FovXY>42 42</FovXY>
		<Resolution>600 600</Resolution>
        <NearDistance>0.01</NearDistance>
    </Camera>
	
	<!-- Glue Test Object -->
	<Mesh>
		<Datapath>../sample_input/deneme.obj</Datapath>
		<Transformation>
			<Scaling>0.4 0.4 0.4</Scaling>
			<Rotation>0 1 0 270</Rotation>
			<Translation>0 0.5 -0.5</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.73 0.48 0.34</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Ball -->
	<Mesh>
		<Datapath>../sample_input/ball.obj</Datapath>
		<Transformation>
			<Scaling>0.395 0.395 0.395</Scaling>
			<Translation>0 0.5 -0.5</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.4 0.4 0.4</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Front -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>2 2 2</Scaling>
			<Translation>0 1 -1.5</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Back -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>2 2 2</Scaling>
			<Rotation>0 1 0 180</Rotation>
			<Translation>0 1 1.5</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Right -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>3 2 2</Scaling>
			<Rotation>0 1 0 270</Rotation>
			<Translation>1 1 0</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Left -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>3 2 2</Scaling>
			<Rotation>0 1 0 90</Rotation>
			<Translation>-1 1 0</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Ceil -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>2 3 2</Scaling>
			<Rotation>1 0 0 90</Rotation>
			<Translation>0 2 0</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Floor -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>2 3 2</Scaling>
			<Rotation>-1 0 0 90</Rotation>
			<Translation>0 0 0</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	
	<Light type="DiffuseArealight">
		<Flux>10 10 10</Flux>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>0.3 0.3 0.3</Scaling>
			<Rotation>1 0 0 90</Rotation>
			<Translation>0 1.999 -0.1</Translation>
		</Transformation>
	</Light>
</Scene>