<Scene>
    <Integrator type="Pathtracer">
		<Filter type="Gaussian">
			<Sigma>0.5</Sigma>
		</Filter>
		<SampleCount>4</SampleCount>
		<RRThreshold>0.2</RRThreshold>
    </Integrator>
	
	<Output type="Ldr">
		<Path>../sample_output/cornell-lucyClamp</Path>
		<Format>png</Format>
		<Tonemapper type="Clamp">
			<Min>0.0</Min>
			<Max>1.0</Max>
		</Tonemapper>
	</Output>
	
    <Camera>
        <Position>0 0.95 1.49</Position>
        <Direction>0 0 -1</Direction>
        <Up>0 1 0</Up>
        <FovXY>42 56</FovXY>
		<Resolution>600 800</Resolution>
        <NearDistance>0.01</NearDistance>
    </Camera>
	
	<!-- Lucy -->
	<Object type="Mesh">
		<Datapath>../sample_input/lucy.obj</Datapath>
		<Transformation>
			<Scaling>0.0018 0.0018 0.0018</Scaling>
			<Rotation>0 1 0 60</Rotation>
			<Translation>0 0 -0.5</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<Kd>0.73 0.48 0.34</Kd>
		</BsdfMaterial>
	</Object>
