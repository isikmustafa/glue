<Scene>
    <BackgroundRadiance>0 0 0</BackgroundRadiance>
	<SecondaryRayEpsilon>0.001</SecondaryRayEpsilon>
	
    <Integrator type="Pathtracer">
		<Filter type="Gaussian">
			<Sigma>0.5</Sigma>
		</Filter>
		<SampleCount>500</SampleCount>
		<RRThreshold>0.2</RRThreshold>
    </Integrator>
	
    <Output>
        <Image>
			<ImageName>../sample_output/cornell-groot.png</ImageName>
			<Tonemapper type="Clamp">
				<Min>0.0</Min>
				<Max>1.0</Max>
			</Tonemapper>
		</Image>
    </Output>
	
    <Camera>
        <Position>0 0.95 1.49</Position>
        <Direction>0 0 -1</Direction>
        <Up>0 1 0</Up>
        <FovXY>42 56</FovXY>
		<Resolution>600 800</Resolution>
        <NearDistance>0.01</NearDistance>
    </Camera>
	
	<!-- Rabbit -->
	<Mesh>
		<Datapath>../sample_input/groot.obj</Datapath>
		<Transformation>
			<Scaling>0.2 0.2 0.2</Scaling>
			<Translation>0 0.51 -1</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.73 0.48 0.34</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Front -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>2 2 2</Scaling>
			<Translation>0 1 -1.5</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Back -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>2 2 2</Scaling>
			<Rotation>0 1 0 180</Rotation>
			<Translation>0 1 1.5</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Right -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>3 2 2</Scaling>
			<Rotation>0 1 0 270</Rotation>
			<Translation>1 1 0</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Left -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>3 2 2</Scaling>
			<Rotation>0 1 0 90</Rotation>
			<Translation>-1 1 0</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Ceil -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>2 3 2</Scaling>
			<Rotation>1 0 0 90</Rotation>
			<Translation>0 2 0</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	<!-- Floor -->
	<Mesh>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>2 3 2</Scaling>
			<Rotation>-1 0 0 90</Rotation>
			<Translation>0 0 0</Translation>
		</Transformation>
		<BsdfMaterial type="Lambertian">
			<kd>0.6 0.6 0.6</kd>
		</BsdfMaterial>
	</Mesh>
	
	<Light type="DiffuseArealight">
		<Flux>10 10 10</Flux>
		<Datapath>../sample_input/rectangle.obj</Datapath>
		<Transformation>
			<Scaling>0.3 0.3 0.3</Scaling>
			<Rotation>1 0 0 90</Rotation>
			<Translation>0 1.999 0.0</Translation>
		</Transformation>
	</Light>
</Scene>